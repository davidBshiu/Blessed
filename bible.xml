<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/add" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/center"
        android:layout_toStartOf="@+id/center"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bible"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bible"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/center"
        android:layout_toEndOf="@+id/center"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>

    <Space
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/Verseoftheday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verse of the Day"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/Verse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Corinthians 9:8 (NIV) - And God is able to bless you abundantly, so that in all things at all times, having all that you need, you will abound in every good work."
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Verseoftheday"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am feeling:"
            android:layout_below="@+id/Verse"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>

        <Spinner
            android:id="@+id/feelingspinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/feeling"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feelingspinner"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="asdf"
            android:textSize="20sp" />

</RelativeLayout>